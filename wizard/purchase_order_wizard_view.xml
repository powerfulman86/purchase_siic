<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_order_wizard_form_view" model="ir.ui.view">
            <field name="name">purchase.order.wizard.form.view</field>
            <field name="model">purchase.order.wizard</field>
            <field name="arch" type="xml">
                <form string="Genarate Purchase Order">
                    <group string="Group By Partner">
                        <field name="group_by_partner"/>
                    </group>
                    <footer>
                        <button string='Generate Purchase Order' name="action_create_po" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_purchase_order_wizard" model="ir.actions.act_window">
            <field name="name">Generate Purchase Order</field>
            <field name="res_model">purchase.order.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <act_window id="generate_purchase_order_action"
                    name="Generate Purchase Order"
                    res_model="purchase.order.wizard"
                    binding_model="purchase.tender.order.line"
                    binding_views="list"
                    view_mode="form"
                    target="new"
        />
    </data>
</odoo>